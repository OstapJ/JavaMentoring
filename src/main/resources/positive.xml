<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Positive tests" verbose="1">
	<groups>
		<run>
			<include name="positive"/>
		</run>
	</groups>

	<test name="Sum two numbers">
		<parameter name="firstInput" value="5"/>
		<parameter name="secondInput" value="5"/>
		<parameter name="expectedResult" value="11"/>

		<classes>
			<class name="com.epam.jmp.CalculatorSimpleOperationTest">
				<methods>
					<include name="testSumDoublePositive"/>
					<include name="testSumLongPositive"/>
				</methods>
			</class>
		</classes>
	</test>

	<test name="Subtract two numbers">
		<parameter name="firstInput" value="10"/>
		<parameter name="secondInput" value="5"/>
		<parameter name="expectedResult" value="5"/>

		<classes>
			<class name="com.epam.jmp.CalculatorSimpleOperationTest">
				<methods>
					<include name="testSubtractDoublePositive"/>
					<include name="testSubtractLongPositive"/>
				</methods>
			</class>
		</classes>
	</test>

	<test name="Multiply two numbers">
		<parameter name="firstInput" value="3"/>
		<parameter name="secondInput" value="3"/>
		<parameter name="expectedResult" value="9"/>

		<classes>
			<class name="com.epam.jmp.CalculatorSimpleOperationTest">
				<methods>
					<include name="testMultiplyDoublePositive"/>
					<include name="testMultiplyLongPositive"/>
				</methods>
			</class>
		</classes>
	</test>

	<test name="Divide two numbers">
		<parameter name="firstInput" value="9"/>
		<parameter name="secondInput" value="3"/>
		<parameter name="expectedResult" value="3"/>

		<classes>
			<class name="com.epam.jmp.CalculatorSimpleOperationTest">
				<methods>
					<include name="testDivideDoublePositive"/>
					<include name="testDivideLongPositive"/>
				</methods>
			</class>
		</classes>
	</test>

	<test name="Divide two by zero">
		<parameter name="firstInput" value="9"/>
		<parameter name="secondInput" value="0"/>

		<classes>
			<class name="com.epam.jmp.CalculatorSimpleOperationTest">
				<methods>
					<include name="testDivideByZeroDoublePositive"/>
					<include name="testDivideByZeroLongPositive"/>
				</methods>
			</class>
		</classes>
	</test>

	<test name="Power two numbers">
		<parameter name="firstInput" value="3"/>
		<parameter name="secondInput" value="3"/>
		<parameter name="expectedResult" value="27"/>

		<classes>
			<class name="com.epam.jmp.CalculatorComplexOperationTest">
				<methods>
					<include name="testPowerDoublePositive"/>
				</methods>
			</class>
		</classes>
	</test>

	<test name="Root from the number">
		<parameter name="firstInput" value="9"/>
		<parameter name="expectedResult" value="3"/>

		<classes>
			<class name="com.epam.jmp.CalculatorComplexOperationTest">
				<methods>
					<include name="testRootDoublePositive"/>
				</methods>
			</class>
		</classes>
	</test>

	<test name="isPrime function doesn't take more than 500 milliseconds">
		<parameter name="firstInput" value="12343423"/>
		<classes>
			<class name="com.epam.jmp.CalculatorComplexOperationTest">
				<methods>
					<include name="testIsPrimePositive"/>
				</methods>
			</class>
		</classes>
	</test>

	<test name="Calculate Fibonacci value for the given number">
		<classes>
			<class name="com.epam.jmp.CalculatorComplexOperationTest">
				<methods>
					<include name="testFibonacciPositive"/>
				</methods>
			</class>
		</classes>
	</test>

</suite>